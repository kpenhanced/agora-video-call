<!DOCTYPE html>
<html lang="en">

<head>

    {{> header}}

</head>

<body>

    <body>
        <div class="container-fluid p-0">
            <div id="main-container">
                <div id="buttons-container" class="row justify-content-center mt-3">
                    <div class="col-3 text-center">
                        <button id="mic-btn" type="button" class="btn btn-warning btn-lg">
                            <i id="mic-icon" class="fas fa-microphone"></i>
                        </button>
                    </div>
                    <div class="col-3 text-center">
                        <button id="video-btn" type="button" class="btn btn-primary btn-lg">
                            <i id="video-icon" class="fas fa-video"></i>
                        </button>
                    </div>
                    <div class="col-3 text-center">
                        <button id="exit-btn" type="button" class="btn btn-danger btn-lg">
                            <i id="exit-icon" class="fas fa-phone-slash"></i>
                        </button>
                    </div>
                </div>
                <div id="full-screen-video"></div>
                <div id="lower-video-bar" class="row fixed-bottom mb-1">
                    <div id="remote-streams-container" class="container col-9 ml-1">
                        <div id="remote-streams" class="row">
                            <!-- insert remote streams dynamically -->
                        </div>
                    </div>
                    <div id="local-stream-container" class="col p-0">
                        <div id="mute-overlay" class="col">
                            <i id="mic-icon" class="fas fa-microphone-slash"></i>
                        </div>
                        <div id="no-local-video" class="col text-center">
                            <i id="user-icon" class="fas fa-user"></i>
                        </div>
                        <div id="local-video" class="col p-0"></div>
                    </div>
                </div>
            </div>
        </div>
        <!-- Modal -->
        <div class="modal fade" id="modalForm">
            <div class="modal-dialog modal-dialog-centered">
                <div class="modal-content">
                    <div class="modal-header text-center">
                        <h4 class="modal-title font-weight-bold">Join Channel</h4>
                        <button type="button" class="close" data-dismiss="modal">
                            <span>&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        <div class="md-form mb-4" hidden>
                            <label for="form-appid">App Id</label>
                            <input type="text" id="form-appid" class="form-control" value="{{appId}}">
                        </div>
                        <div class="md-form mb-4">
                            <label for="form-uid">Username</label>
                            <input type="text" id="form-uid" class="form-control">
                        </div>
                        <div class="md-form mb-4">
                            <label for="form-channel">Channel</label>
                            <input type="text" id="form-channel" class="form-control">
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button id="join-channel" class="btn btn-success">Join Channel</button>
                    </div>
                </div>
            </div>
        </div>
    </body>

    {{> scripts}}

</body>

</html>